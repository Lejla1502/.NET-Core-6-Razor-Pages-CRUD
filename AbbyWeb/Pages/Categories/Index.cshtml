@page
@model AbbyWeb.Pages.Categories.IndexModel

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-secondary">Category List</h2>
        </div>
         <div class="col-6 text-end">
            <a asp-page="Create" class="btn btn-primary">
              <i class="bi bi-plus-lg"></i> &nbsp; Create New Category
			</a>
		</div>
    </div>
    <br /><br />
</div>

 <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Category name</th>
                <th>Display order</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model.Categories)
            {
                <tr>
                    <td width="50%"> @obj.Name</td>
                    <td width="30%">@obj.DisplayOrder</td>
                    <td>
                        <div class="w-85 btn-group" role="group">
                              <a class="btn btn-primary mx-2"  asp-page="Edit" asp-route-id="@obj.Id"><i class="bi bi-pencil-square"></i>Edit</a>
                              <a class="btn btn-danger mx-2" asp-page-handler="OnPostDelete" asp-route-id="@obj.Id"><i class="bi bi-trash"></i>Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>