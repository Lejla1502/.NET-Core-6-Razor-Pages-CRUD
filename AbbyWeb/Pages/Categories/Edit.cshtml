@page
@model AbbyWeb.Pages.Categories.EditModel



<form method="post" asp-controller="Category" asp-action="SaveAfterEdit">
    
    <div class="mt-4">
        <div class="row pb-2">
            <h2 class="text-secondary">Edit category</h2>
        </div>
    </div>
  <fieldset>
    @*<div asp-validation-summary="All"></div>*@
    <div class="form-group">
        <input type="hidden" asp-for="Category.Id" />
    </div>
    <div class="form-group">
      <label asp-for="Category.Name" class="form-label mt-4">Category name</label>
      <input asp-for="Category.Name" type="text" class="form-control" placeholder="Enter category name">
      <span asp-validation-for="Category.Name" class="text-danger"></span>
    </div>
    <div class="mb-3 form-group">
      <label asp-for="Category.DisplayOrder" class="form-label mt-4"></label>
      <input asp-for="Category.DisplayOrder" type="text" class="form-control" placeholder="Order">
      <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
    </div>
   
    
    <button type="submit" class="btn btn-warning" style="width:150px">Update</button>
    <a asp-page="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
  </fieldset>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
     }
}